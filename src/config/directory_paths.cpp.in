#include "config.cpp"
#include "directory_paths.h"
#include <filesystem>

namespace config {
////////////////////////////////////////////////////////////
const std::filesystem::path getDataFolder() { return "@data_path@"; };

////////////////////////////////////////////////////////////
const std::filesystem::path getScenesFolder() {

  return getDataFolder() / "scenes";
};
////////////////////////////////////////////////////////////
const std::filesystem::path getSchemaFolder() {
  return getDataFolder() / "schema";
}

////////////////////////////////////////////////////////////
const std::filesystem::path getThemesFolder() {
  config::CanIAccessThis();
  return getDataFolder() / "themes";
}

/////////////////////////////////////////////////
const std::filesystem::path getAssetsFolder() {
  return getDataFolder() / "assets";
}

/////////////////////////////////////////////////
const std::filesystem::path getFontsFolder() {
  return getAssetsFolder() / "fonts";
}

////////////////////////////////////////////////////////////
const std::filesystem::path getConfigurationFolder() {
  return "@resource_path@";
}

////////////////////////////////////////////////////////////
const std::filesystem::path getLogsFolder() { return getDataFolder() / "logs"; }
} // namespace config
