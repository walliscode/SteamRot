include "types.fbs";

namespace steamrot;

enum UIElementType: byte{

  None= 0, 
  Panel = 1,
  Button = 2,   
  }

enum LayoutType: byte{ 
  None = 0,
  Horizontal = 1,
  Vertical = 2,
  Grid = 3,
  }

table UIElementData{
    type: UIElementType;
    children: [UIElementData];
  layout: LayoutType;
    position: Vector2f;
    size: Vector2f;
    label: string;
  }

table UserInterface{
    root_ui_element: UIElementData;
  }
