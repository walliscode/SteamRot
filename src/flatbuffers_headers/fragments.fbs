include "types.fbs";

namespace steamrot;

enum ViewDirection: ubyte {
FRONT = 0,
  }

table View {
    triangles : [Triangle] (required);
    direction : ViewDirection;
  }

table SocketData{
  vertices: [Vector2f] (required);
  }

table RenderOverlayData {
  views: [View] (required);
  
}

table FragmentData {
name: string (required);
socket_data: SocketData (required);
render_overlay_data: RenderOverlayData (required);
  }

root_type FragmentData;

